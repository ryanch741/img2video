{
  "name": "img2video3",
  "version": "1.0.0",
  "description": "ProMotion Studio - Generate dynamic demonstration videos from images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanch741/img2video.git"
  },
  "keywords": [],
  "author": "Ryan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ryanch741/img2video/issues"
  },
  "homepage": "https://github.com/ryanch741/img2video#readme",
  "build": {
    "appId": "com.promotion.studio",
    "productName": "灵动演示工坊 Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "lib/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "devDependencies": {
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0"
  }
}